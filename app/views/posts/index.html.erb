<%= link_to 'New Post', new_post_path, class:'button new-post' %>

<div class='container'>
  <% @posts.each do |post| %>
    <div class='post'>
      <%= render partial: 'posts/post', locals: {post: post} %>
      <%# <%= render partial: 'likes/likes', locals: {post: post} %>

      <div class='horizontal-divider full-width'></div>
      
      <%= render partial: 'likes/like_button', locals: {post: post} %>

      <div class='horizontal-divider full-width'></div>

      <%= render partial: 'comments/form', locals: {post: post} %>
      <%= render partial: 'posts/comments', locals: {post: post} %>
    </div>
  <% end %>
</div>

