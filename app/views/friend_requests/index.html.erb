<div class='container center'>
  <h1>Friend Requests</h1>

  <h3>Incoming Requests</h3>
  <% @incoming_requests_users.each do |user, id| %>
    <%= render partial: 'users/friend', locals: {request: true, friend: user, id: id} %>
  <% end %>

  <% current_user.incoming_friend_requests.each do |req| %>
    <% user = User.find(req.from_id) %>
  <% end %>

  <h3>Sent Requests</h3>
  <div class='col-2'>
    <% @outgoing_requests_users.each do |user| %>
      <%= render partial: 'users/friend', locals: {request:false, friend: user} %>
    <% end %>
  </div>
</div>
